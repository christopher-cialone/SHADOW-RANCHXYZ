# Shadow Ranch - Secure Environment Configuration
# Copy this file to .env and configure with your actual values

# ================================
# SOLANA NETWORK CONFIGURATION
# ================================
# Network: 'devnet' | 'mainnet-beta' | 'testnet'
REACT_APP_SOLANA_NETWORK=devnet

# ================================
# SECURE RPC ENDPOINTS
# ================================
# Use private RPC endpoints for production
# Examples: Alchemy, QuickNode, Helius, GenesysGo
REACT_APP_DEVNET_RPC_URL=https://api.devnet.solana.com
REACT_APP_MAINNET_RPC_URL=https://api.mainnet-beta.solana.com
REACT_APP_TESTNET_RPC_URL=https://api.testnet.solana.com

# For production, use a private RPC service:
# REACT_APP_DEVNET_RPC_URL=https://solana-devnet.g.alchemy.com/v2/YOUR-API-KEY
# REACT_APP_MAINNET_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# ================================
# PROGRAM DEPLOYMENT
# ================================
# Shadow Ranch Program ID (deployed program address)
REACT_APP_PROGRAM_ID=Fg6PaFpoGXkYsidMpWTK6W2BeZ7FEfcYkg476zPFsLnS

# ================================
# MONITORING & ANALYTICS
# ================================
# Error tracking (e.g., Sentry DSN)
REACT_APP_SENTRY_DSN=

# Analytics (e.g., Google Analytics tracking ID)
REACT_APP_GA_TRACKING_ID=

# ================================
# SECURITY CONFIGURATIONS
# ================================
# Enable/disable debug logging in production
REACT_APP_DEBUG=false

# Maximum transaction timeout (milliseconds)
REACT_APP_TX_TIMEOUT=30000

# Maximum retry attempts for failed transactions
REACT_APP_MAX_RETRIES=3

# ================================
# NFT STORAGE & METADATA
# ================================
# IPFS gateway for NFT metadata (Pinata, NFT.Storage, etc.)
REACT_APP_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# NFT.Storage API key (for production NFT uploads)
REACT_APP_NFT_STORAGE_API_KEY=

# ================================
# DEVELOPMENT TOOLS
# ================================
# Enable React DevTools in production (set to false for production)
REACT_APP_DEVTOOLS=true

# Local development server port
PORT=5174